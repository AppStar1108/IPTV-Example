<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
	android:keepScreenOn="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	<LinearLayout
        android:id="@+id/layout_livetv_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="@drawable/bg04" >
         <LinearLayout
	        android:id="@+id/category_bar"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="horizontal" >
	        <LinearLayout 
	            android:layout_width="0dip" 
		        android:layout_height="match_parent"
		        android:background="#A0000000"
		        android:layout_weight="0.2"
		        android:orientation="vertical">
		        
	            <RelativeLayout
		        	    android:layout_width="fill_parent"
		        	    android:layout_height="0dip"
		        	    android:layout_weight="0.2">
		        	<LinearLayout
		        		android:layout_width="fill_parent"
		        		android:layout_height="wrap_content"
		        		android:orientation="vertical"
		        		android:layout_marginBottom="40.0dip"
		        		android:layout_alignParentBottom="true">
			            <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="LIVE TV"
				            android:layout_marginLeft="40dip"
				            android:textColor="#FFFFFFFF"
				            android:textSize="35.0sp"/>
				        <ImageView
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:src="@drawable/menuline"
				            android:scaleType="fitXY" />	
		            </LinearLayout>
		        </RelativeLayout>
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="0dip"
		            android:layout_weight="0.8"
		            android:orientation="vertical">
		            <LinearLayout
		                android:layout_width="match_parent"
		            	android:layout_height="0dip"
		            	android:layout_weight="0.78"
		            	android:orientation="vertical">
		            	<ScrollView 
				            android:scrollbars="none"
				            android:layout_width="match_parent" 
				            android:layout_height="match_parent"
				             >
				            <LinearLayout 
				                android:orientation="vertical"  
				                android:id="@+id/layout_livetype" 
				                android:layout_width="fill_parent" 
				                android:layout_height="fill_parent">
				            </LinearLayout>
				        </ScrollView>
		            </LinearLayout>
		            <LinearLayout
		                android:layout_width="match_parent"
		            	android:layout_height="0dip"
		            	android:layout_weight="0.22"
		            	android:orientation="vertical">
		            </LinearLayout>
		        </LinearLayout>
	        </LinearLayout>
	    	<LinearLayout 
		        android:layout_width="0dip" 
			    android:layout_height="match_parent"
			    android:orientation="vertical"
			    android:layout_weight="0.8"
			    android:padding="5.0dip">
		        	<RelativeLayout
		        	    android:layout_width="fill_parent"
		        	    android:layout_height="0dip"
		        	    android:layout_weight="0.2">
		        		<LinearLayout
		        		    android:layout_width="fill_parent"
		        		    android:layout_height="wrap_content"
		        		    android:orientation="vertical"
		        		    android:layout_alignParentBottom="true"
		        		    android:layout_marginBottom="40.0dip">
			            	<TextView
							    android:id="@+id/livetv_type_heading"
						    	android:layout_width="wrap_content"
						    	android:layout_height="wrap_content"
						        android:text="ALL"
						        android:layout_marginLeft="8dip"
						        android:textColor="#FFFFFFFF"
						        android:textSize="35.0sp"/>
					        <ImageView
					            android:layout_width="match_parent"
					            android:layout_height="1.0dip"
					            android:layout_marginTop="10.0dip"
					            android:layout_marginLeft="10.0dip"
					            android:layout_marginRight="30.0dip"
					            android:background="#90FFFFFF"
					            android:scaleType="fitXY" />
		            	</LinearLayout>"
		        	</RelativeLayout>
			        
			        <LinearLayout 
			            android:layout_width="fill_parent"
			            android:layout_height="0dip"
			            android:layout_weight="0.8"
			            android:orientation="vertical">
		            	<LinearLayout
		            	    android:layout_width="fill_parent"
		            	    android:layout_height="0dip"
		            	    android:layout_weight="0.9"
		            	    android:orientation="horizontal">
		            	    <RelativeLayout
			            	    android:layout_width="0dip"
			            	    android:layout_height="fill_parent"
			            	    android:layout_weight="0.7">
			            	    <ImageView
			            	        android:id="@+id/livetv_scrollbar_img"
			            	        android:layout_width="2.0dip"
			            	        android:layout_height="match_parent"
			            	        android:layout_alignParentRight="true"
			            	        android:layout_marginRight="23.0dip" 
			            	        android:src="@drawable/scrollline"
			            	        android:scaleType="fitXY" />
			            	    <ImageView 
			            	        android:id="@+id/livetv_scrollwheel_img"
			            	        android:layout_width="wrap_content"
			            	        android:layout_height="wrap_content"
			            	        android:layout_alignParentRight="true"
			            	        android:layout_marginRight="0dip"
			            	        android:src="@drawable/scrollcircle"/>
			            		<GridView
						            android:id="@+id/listview_live" 
						            android:layout_width="match_parent" 
						            android:layout_height="match_parent"
						            android:verticalSpacing="8.0dip"
						            android:gravity="center"
						            android:numColumns="5"
						            android:listSelector="#00000000"
						            android:layout_marginLeft="20.0dip"
						            android:layout_marginRight="40.0dip"
						            android:scrollbars="none"/>  
			            	</RelativeLayout>
			            
			            <LinearLayout      
					        android:id="@+id/desc_detail"  
					        android:layout_width="0dip"
					        android:layout_height="match_parent"
					        android:orientation="vertical"
					        android:layout_weight="0.3">
					         <FrameLayout
					             android:layout_width="150.0dip"
					             android:layout_height="150.0dip"
					             android:gravity="left"> 
					         	<ImageView
									android:id="@+id/description_logo"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:focusableInTouchMode="false"
									android:layout_margin="1.0dip"
									android:focusable="false"
									/>
					         	<ImageView
									android:id="@+id/description_logo_border"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:focusable="false"
							        android:src="@drawable/tv02"
							    	android:focusableInTouchMode="false"
									/>    
					         </FrameLayout>
							 
							  <TextView
									android:id="@+id/desc_tt"
									android:layout_width="fill_parent"
									android:layout_marginLeft="10.0dip"
									android:layout_height="50dp"		        
									android:gravity="left"
									android:singleLine="true"
									android:textColor="@color/white"
									android:textSize="23.0sp" />
							  <LinearLayout 
							      android:id="@+id/livetv_epg_1"
							      android:layout_width="fill_parent"
							      android:layout_height="wrap_content"
							      android:orientation="vertical"
							      android:background="@drawable/epg"
							      android:layout_marginRight="25.0dip">
							  		<TextView 
							  		    android:id="@+id/livetv_epg_time_1"
							  		    android:layout_width="fill_parent"
							  		    android:layout_height="wrap_content"
							  		    android:layout_marginTop="5.0dip"
							  		    android:layout_marginLeft="20.0dip"
							  		    android:textColor="@color/white"
							  		    android:textSize="14.0sp"/>
							  		<TextView 
							  		    android:id="@+id/livetv_epg_info_1"
							  		    android:layout_width="fill_parent"
							  		    android:layout_height="wrap_content"
							  		    android:layout_marginTop="5.0dip"
							  		    android:layout_marginLeft="20.0dip"
							  		    android:textColor="@color/white"
							  		    android:textSize="14.0sp"/>"
							  </LinearLayout>
							  <LinearLayout
							      android:id="@+id/livetv_epg_2" 
							      android:layout_width="fill_parent"
							      android:layout_height="wrap_content"
							      android:orientation="vertical"
							      android:background="@drawable/epg"
							      android:layout_marginTop="15.0dip"
							      android:layout_marginRight="25.0dip">
							  		<TextView 
							  		    android:id="@+id/livetv_epg_time_2"
							  		    android:layout_width="fill_parent"
							  		    android:layout_height="wrap_content"
							  		    android:layout_marginTop="5.0dip"
							  		    android:layout_marginLeft="20.0dip"
							  		    android:textColor="@color/white"
							  		    android:textSize="14.0sp"/>
							  		<TextView 
							  		    android:id="@+id/livetv_epg_info_2"
							  		    android:layout_width="fill_parent"
							  		    android:layout_height="wrap_content"
							  		    android:layout_marginTop="5.0dip"
							  		    android:layout_marginLeft="20.0dip"
							  		    android:textColor="@color/white"
							  		    android:textSize="14.0sp"/>
							  </LinearLayout>
							  <LinearLayout 
							      android:id="@+id/livetv_epg_3"
							      android:layout_width="fill_parent"
							      android:layout_height="wrap_content"
							      android:orientation="vertical"
							      android:background="@drawable/epg"
							      android:layout_marginTop="15.0dip"
							      android:layout_marginRight="25.0dip">
							  		<TextView 
							  		    android:id="@+id/livetv_epg_time_3"
							  		    android:layout_width="fill_parent"
							  		    android:layout_height="wrap_content"
							  		    android:layout_marginTop="5.0dip"
							  		    android:layout_marginLeft="20.0dip"
							  		    android:textColor="@color/white"
							  		    android:textSize="14.0sp"/>
							  		<TextView 
							  		    android:id="@+id/livetv_epg_info_3"
							  		    android:layout_width="fill_parent"
							  		    android:layout_height="wrap_content"
							  		    android:layout_marginTop="5.0dip"
							  		    android:layout_marginLeft="20.0dip"
							  		    android:textColor="@color/white"
							  		    android:textSize="14.0sp"/>
							  </LinearLayout>
							  <RelativeLayout
							            android:layout_width="fill_parent"
							            android:layout_height="fill_parent">
							                <LinearLayout
							                    android:id="@+id/four_button_layout"
							                    android:layout_width="fill_parent"
							                    android:layout_height="wrap_content"
							                    android:layout_alignParentBottom="true"
							                    android:layout_marginBottom="30.0dip"
							                    android:layout_marginRight="30.0dip"
							                    android:orientation="horizontal">
							                    <LinearLayout
							                        android:layout_width="0dip"
							                        android:layout_height="wrap_content"
							                        android:layout_weight="0.25"
							                        android:orientation="vertical">
							                        <ImageView
												         android:id="@+id/btn_refresh"
												         android:layout_width="match_parent"
												         android:layout_height="15.0dip"        
												         android:gravity="center"
												         android:layout_marginLeft="5.0dip"
												         android:layout_marginRight="5.0dip"
												         android:src="@drawable/tvkeyred"
												         android:scaleType="fitXY"/>
							                        <TextView
							                            android:layout_width="match_parent"
												        android:layout_height="wrap_content"
												        android:textSize="14.0sp"
												        android:gravity="center"
												        android:textColor="#FFFFFFFF"
												        android:text="Refresh"
							                            />
							                    </LinearLayout>
							                    <LinearLayout
							                        android:layout_width="0dip"
							                        android:layout_height="wrap_content"
							                        android:layout_weight="0.25"
							                        android:orientation="vertical">
							                        <ImageView
												         android:id="@+id/btn_favourite"
												         android:layout_width="match_parent"
												         android:layout_height="15.0dip"	        
												         android:gravity="center"
												         android:layout_marginLeft="5.0dip"
												         android:layout_marginRight="5.0dip"
												         android:src="@drawable/tvkeygreen"
												         android:scaleType="fitXY"/>
							                        <TextView
							                            android:layout_width="match_parent"
												        android:layout_height="wrap_content"
												        android:textSize="14.0sp"
												        android:gravity="center"
												        android:textColor="#FFFFFFFF"
												        android:text="Favorite"
							                            />
							                    </LinearLayout>
							                    <LinearLayout
							                        android:layout_width="0dip"
							                        android:layout_height="wrap_content"
							                        android:layout_weight="0.25"
							                        android:orientation="vertical">
							                        <ImageView
												         android:id="@+id/btn_lock"
												         android:layout_width="match_parent"
												         android:layout_height="15.0dip"		        
												         android:gravity="center"
												         android:layout_marginLeft="5.0dip"
												         android:layout_marginRight="5.0dip"
												         android:scaleType="fitXY"
												         android:src="@drawable/tvkeyyellow"/>
							                        <TextView
							                            android:layout_width="match_parent"
												        android:layout_height="wrap_content"
												        android:textSize="14.0sp"
												        android:gravity="center"
												        android:textColor="#FFFFFFFF"
												        android:text="Lock"
							                            />
							                    </LinearLayout>
							                    <LinearLayout
							                        android:layout_width="0dip"
							                        android:layout_height="wrap_content"
							                        android:layout_weight="0.25"
							                        android:orientation="vertical">
							                        <ImageView
												         android:id="@+id/btn_sort"
												         android:layout_width="match_parent"
												         android:layout_height="15.0dip"		        
												         android:gravity="center"
												         android:layout_marginLeft="5.0dip"
												         android:layout_marginRight="5.0dip"
												         android:scaleType="fitXY"
												         android:src="@drawable/tvkeyblue"/>
							                        <TextView
							                            android:layout_width="match_parent"
												        android:layout_height="wrap_content"
												        android:textSize="14.0sp"
												        android:gravity="center"
												        android:textColor="#FFFFFFFF"
												        android:text="Sort"
							                            />
							                    </LinearLayout>
							                </LinearLayout>
									</RelativeLayout>
				        	</LinearLayout> 
		            	</LinearLayout>
		            	<LinearLayout 
				            android:layout_width="match_parent"
				            android:layout_height="0dip"
				            android:layout_weight="0.1"
				            android:orientation="horizontal">
			            	<TextView
			            	    android:id="@+id/livetv_channel_pages"
			            	    android:layout_width="fill_parent"
			            	    android:layout_height="wrap_content"
			            	    android:layout_marginLeft="20.0dip"
			            	    android:textSize="30.0sp"
			            	    android:textColor="@color/white"/>
			        	</LinearLayout>
			        </LinearLayout>
			        
		    </LinearLayout>
       	</LinearLayout>            
    </LinearLayout>
	<LinearLayout
	    android:id="@+id/layout_livetv_search"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal"
	    android:background="@drawable/bg04"
	    android:visibility="gone">
	    <LinearLayout 
	        android:id="@+id/livetv_search_menu_layout"
	        android:layout_width="400.0dip"
	        android:layout_height="fill_parent"
	        android:background="#A0000000"
	        android:orientation="vertical">
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dip"
	            android:layout_weight="0.2"
	            android:orientation="vertical"
	            android:gravity="center">
	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/search_logo"/>
	        </LinearLayout>
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dip"
	            android:layout_weight="0.7"
	            android:orientation="vertical">
				<ListView
				    android:id="@+id/livetv_search_menu_list"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_marginLeft="30.0dip" 
		        	android:layout_marginRight="25.0dip"
				    android:divider="@drawable/list_selector_draw"
				    android:listSelector="@drawable/live_ok_item_selector"
		        	android:dividerHeight="9.0dip"
		        	android:scrollbars="none"/>
				<ImageView
				    android:id="@+id/livetv_searchmenu_scrollbar"
				    android:layout_width="2.0dip"
				    android:layout_height="fill_parent"
				    android:layout_alignParentRight="true"
				    android:layout_marginRight="12.0dip" 
				    android:background="#D0FFFFFF"/>
				<ImageView 
				    android:id="@+id/livetv_searchmenu_scrollwheel"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_marginRight="-11.5dip"
				    android:src="@drawable/scrollcircle"/>
	        </RelativeLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dip"
	            android:layout_weight="0.1"
	            android:orientation="vertical"/>
	    	</LinearLayout>
	</LinearLayout>
    <LinearLayout
        android:id="@+id/layout_bottom_guide"
        android:layout_width="fill_parent"
        android:layout_height="150.0dip"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#A0000000">
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical|right"
	        android:layout_weight="0.25">
	    	<ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/num_pic"/>    
	    </LinearLayout>
        <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="fill_parent"
	        android:gravity="center_horizontal"
	        android:layout_weight="0.5">
	    	<TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="15.0dip"
	            android:text="You may press the numeric keys to choose channel"
	            android:textColor="#FF9DA560"
	            android:textSize="30.0sp"/>    
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical|left"
	        android:layout_weight="0.25">
	    	<ImageView
	    	    android:id="@+id/img_dontshow"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/pause_buttons"/>    
	    </LinearLayout>
    </LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@+id/layout_livetv_search"
		android:background="@drawable/bg04"
		android:id="@+id/rly_btnback">

		<Button
			android:text="Serial Number"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/btn_sn"
			style="@android:style/Widget.Button.Inset"
			android:background="@drawable/snbg"
			android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="40dp"
			android:layout_alignParentRight="false"
			android:layout_centerVertical="false"
			android:layout_centerHorizontal="true"
			android:textSize="18sp"
			android:textColor="@color/white" />

		<Button
			android:text="Exit"
			android:layout_width="135dp"
			android:layout_height="35dp"
			android:id="@+id/btn_exit"
			style="@android:style/Widget.Button"
			android:background="@drawable/btn_exit"
			android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="150dp"
			android:textColor="@color/white"
			android:textSize="25sp" />

		<Button
			android:text="Retry"
			android:id="@+id/btn_retry"
			android:background="@drawable/btn_retry"
			style="@android:style/Widget.Button"
			android:onClick="onClick (LiveTvActivity)"
			android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
			android:layout_height="35dp"
			android:layout_width="135dp"
			android:layout_centerInParent="false"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/btn_exit"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="150dp"
			android:textColor="@color/white"
			android:textSize="25sp" />

	</RelativeLayout>

</RelativeLayout>